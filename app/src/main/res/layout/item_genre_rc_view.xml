<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgGenre"
            android:layout_width="184dp"
            android:layout_height="112dp"
            app:shapeAppearanceOverlay="@style/style_corner_for_image_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dot_background" />

        <TextView
            android:id="@+id/textforGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/sf_regular"
            android:textColor="?attr/colorPrimaryVariant"
            app:layout_constraintTop_toTopOf="@id/imgGenre"
            app:layout_constraintEnd_toEndOf="@id/imgGenre"
            app:layout_constraintStart_toStartOf="@id/imgGenre"
            app:layout_constraintBottom_toBottomOf="@id/imgGenre"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>